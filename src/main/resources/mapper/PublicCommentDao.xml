<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace为对应的dao类路径 -->
<mapper namespace="com.zhuolang.starryserver.dao.PublicCommentDao">

    <!--添加评论-->
    <insert id="addComment" parameterType="com.zhuolang.starryserver.entity.PublicComment">
        INSERT ignore INTO public_comment_tab(commentator,receive_id,public_id,comment_time,comment_content)
        VALUES (#{comment.commentator},#{comment.receiveId},#{comment.publicId},#{comment.commentTime},#{comment.commentContent})
    </insert>

   <!-- 通过评论表id删除评论-->
    <delete id="deleteComment">
        DELETE
        FROM public_comment_tab
        WHERE id=#{id}
    </delete>

    <!--显示帖子的所有评论-->
    <select id="showAllComment" resultType="com.zhuolang.starryserver.entity.PublicComment">
        SELECT *
        FROM public_comment_tab
        WHERE public_id=#{pId}
    </select>

</mapper>
